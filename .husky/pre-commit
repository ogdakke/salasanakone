#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

if pnpm test -- --run --coverage; then
  printf "\nTests and linting ran successfully" 
else
  printf "\nTests failed..."
fi

if pnpm lint; then
  printf "\nLinting ran successfully"
else
  printf "\nLinting FAILED, running prettier:format..."
  pnpm prettier:format && printf "\nRan prettier, try commiting again.\n\n"
  exit 1
fi